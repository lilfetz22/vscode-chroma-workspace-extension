{
  "name": "notesnlh",
  "displayName": "Notes_NLH",
  "description": "Syntax highlighting for simple notes with Natural Language Highlighting (NLP parts of speech) in Visual Studio Code",
  "icon": "images/Natural_Language_Highlighting.png",
  "version": "0.0.1",
  "publisher": "lilfetz22",
  "repository": "https://github.com/lilfetz22/vscode-notes",
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:notesnlh"
  ],
  "main": "./dist/extension_bundled.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chroma-workspace",
          "title": "Chroma Workspace",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "chroma-workspace": [
        {
          "id": "kanban",
          "name": "Kanban"
        }
      ]
    },
    "configuration": {
      "title": "Notes NLH",
      "properties": {
        "notesnlh.linkPatterns": {
          "type": "object",
          "default": {},
          "description": "A list of regex to link patterns (e.g. Item: \"ABC-\\d+\"  Value: \"https://abc-project.atlassian.net/browse/$0\") that will be applied across all your notesnlh. Turns matching text into links.",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "string"
              }
            ]
          }
        },
        "notesnlh.highlightNouns": {
          "type": "boolean",
          "default": true,
          "description": "Highlight nouns in the document"
        },
        "notesnlh.highlightVerbs": {
          "type": "boolean",
          "default": true,
          "description": "Highlight verbs in the document"
        },
        "notesnlh.highlightAdjectives": {
          "type": "boolean",
          "default": true,
          "description": "Highlight adjectives in the document"
        },
        "notesnlh.highlightAdverbs": {
          "type": "boolean",
          "default": true,
          "description": "Highlight adverbs in the document"
        },
        "notesnlh.highlightNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Highlight numbers in the document"
        }
      }
    },
    "languages": [
      {
        "id": "notesnlh",
        "aliases": [
          "Notes NLH"
        ],
        "extensions": [
          ".notesnlh"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "notesnlh",
        "scopeName": "source.notesnlh",
        "path": "./syntaxes/notesnlh.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "notesnlh.cycleTaskForwardNew",
        "title": "Task Complete (cycle)"
      },
      {
        "command": "notesnlh.cycleTaskBackwardNew",
        "title": "Task Complete (cycle backward)"
      },
      {
        "command": "notesnlh.highlightPartsOfSpeech",
        "title": "Highlight Parts of Speech"
      },
      {
        "command": "chroma.addCard",
        "title": "Add Card"
      },
      {
        "command": "chroma.editCard",
        "title": "Edit Card"
      },
      {
        "command": "chroma.moveCard",
        "title": "Move Card"
      },
      {
        "command": "chroma.addBoard",
        "title": "Add Board"
      },
      {
        "command": "chroma.editBoard",
        "title": "Edit Board"
      },
      {
        "command": "chroma.deleteBoard",
        "title": "Delete Board"
      },
      {
        "command": "chroma.addColumn",
        "title": "Add Column"
      },
      {
        "command": "chroma.editColumn",
        "title": "Edit Column"
      },
      {
        "command": "chroma.deleteColumn",
        "title": "Delete Column"
      },
      {
        "command": "chroma.deleteCard",
        "title": "Delete Card"
      }
    ],
    "menus": {
        "view/title": [
            {
                "command": "chroma.addBoard",
                "when": "view == kanban",
                "group": "navigation"
            }
        ],
        "view/item/context": [
            {
                "command": "chroma.editBoard",
                "when": "view == kanban && viewItem == board",
                "group": "inline"
            },
            {
                "command": "chroma.deleteBoard",
                "when": "view == kanban && viewItem == board",
                "group": "inline"
            },
            {
                "command": "chroma.addColumn",
                "when": "view == kanban && viewItem == board",
                "group": "inline"
            },
            {
                "command": "chroma.editColumn",
                "when": "view == kanban && viewItem == column",
                "group": "inline"
            },
            {
                "command": "chroma.deleteColumn",
                "when": "view == kanban && viewItem == column",
                "group": "inline"
            },
            {
                "command": "chroma.addCard",
                "when": "view == kanban && viewItem == column",
                "group": "inline"
            },
            {
                "command": "chroma.editCard",
                "when": "view == kanban && viewItem == card",
                "group": "inline"
            },
            {
                "command": "chroma.deleteCard",
                "when": "view == kanban && viewItem == card",
                "group": "inline"
            },
            {
                "command": "chroma.moveCard",
                "when": "view == kanban && viewItem == card",
                "group": "inline"
            }
        ]
    },
    "snippets": [
      {
        "language": "notesnlh",
        "path": "./snippets/newday.json"
      }
    ],
    "keybindings": [
      {
        "command": "notesnlh.cycleTaskForwardNew",
        "key": "cmd+l",
        "when": "editorTextFocus && isMac"
      },
      {
        "command": "notesnlh.cycleTaskForwardNew",
        "key": "ctrl+l",
        "when": "editorTextFocus && !isMac"
      },
      {
        "command": "notesnlh.cycleTaskBackwardNew",
        "key": "cmd+shift+l",
        "when": "editorTextFocus && isMac"
      },
      {
        "command": "notesnlh.cycleTaskBackwardNew",
        "key": "ctrl+shift+l",
        "when": "editorTextFocus && !isMac"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "entity_name_type",
        "superType": "type",
        "description": "Noun"
      },
      {
        "id": "entity_name_function",
        "superType": "function",
        "description": "Verb"
      },
      {
        "id": "entity_other_attribute_name",
        "superType": "string",
        "description": "Adjective"
      },
      {
        "id": "adverb_language",
        "superType": "variable",
        "description": "Adverb"
      },
      {
        "id": "value_type",
        "superType": "regexp",
        "description": "Value"
      }
    ]
  },
  "__metadata": {
    "id": "",
    "publisherDisplayName": "lilfetz22",
    "publisherId": ""
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "compromise": "^14.14.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "chai": "^6.2.0",
    "esbuild": "^0.23.1",
    "mocha": "^11.7.4",
    "ts-node": "^10.9.2"
  },
  "scripts": {
    "test": "mocha --require ts-node/register test/**/*.test.ts",
    "compile": "tsc -p ./"
  }
}
