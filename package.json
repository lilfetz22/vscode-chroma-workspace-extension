{
  "name": "chroma-workspace",
  "displayName": "Chroma Workspace",
  "description": "Comprehensive workspace management with Natural Language Highlighting, Kanban boards, task scheduling, and productivity analytics - all data stored locally",
  "icon": "images/chroma_extension_icon.png",
  "version": "2.19.0",
  "publisher": "lilfetz22",
  "repository": "https://github.com/lilfetz22/vscode-chroma-workspace-extension",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension_bundled.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chroma-workspace",
          "title": "Chroma Workspace",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "chroma-workspace": [
        {
          "id": "kanban",
          "name": "Kanban",
          "icon": "images/icon.svg"
        },
        {
          "id": "notes",
          "name": "Notes",
          "icon": "images/icon.svg"
        },
        {
          "id": "scheduledTasks",
          "name": "Scheduled Tasks",
          "icon": "images/icon.svg"
        },
        {
          "id": "tags",
          "name": "Tags",
          "icon": "images/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Chroma Workspace",
      "properties": {
        "chroma.nlh.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Natural Language Highlighting for notes"
        },
        "chroma.nlh.colors.nouns": {
          "type": "string",
          "default": "#569CD6",
          "description": "Color for nouns in Natural Language Highlighting (hex color)"
        },
        "chroma.nlh.colors.verbs": {
          "type": "string",
          "default": "#4EC9B0",
          "description": "Color for verbs in Natural Language Highlighting (hex color)"
        },
        "chroma.nlh.colors.adjectives": {
          "type": "string",
          "default": "#C586C0",
          "description": "Color for adjectives in Natural Language Highlighting (hex color)"
        },
        "chroma.nlh.colors.adverbs": {
          "type": "string",
          "default": "#DCDCAA",
          "description": "Color for adverbs in Natural Language Highlighting (hex color)"
        },
        "chroma.nlh.colors.numbers": {
          "type": "string",
          "default": "#B5CEA8",
          "description": "Color for numbers in Natural Language Highlighting (hex color)"
        },
        "chroma.nlh.colors.properNouns": {
          "type": "string",
          "default": "#4FC1FF",
          "description": "Color for proper nouns in Natural Language Highlighting (hex color)"
        },
        "chroma.tasks.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for due and overdue tasks"
        },
        "chroma.tasks.notificationFrequency": {
          "type": "string",
          "enum": [
            "once",
            "hourly",
            "daily"
          ],
          "default": "once",
          "description": "How often to show notifications for overdue tasks"
        },
        "chroma.tasks.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show task count in the status bar"
        },
        "chroma.tasks.vacationMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable vacation mode to pause scheduled task-to-card conversion. Tasks will not be converted to cards until vacation mode is disabled."
        },
        "chroma.tasks.vacationModeBoards": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Boards to pause when Vacation Mode is enabled.",
          "markdownDescription": "When Vacation Mode is enabled, tasks on these boards will not be auto-converted into cards.\n\n• Enter **exact board names** (as shown in the Kanban view) or **board IDs**.\n• If left empty, Vacation Mode applies to **all boards**.\n\nExamples:\n- By name: `Personal Board`\n- By ID: Use the Copy Board Id button in the Kanban board context menu\n\nTip: Hover over a board name to see its ID."
        },
        "chroma.kanban.taskCreationColumn": {
          "type": "string",
          "default": "To Do",
          "description": "Name of the column where new tasks are created"
        },
        "chroma.kanban.completionColumn": {
          "type": "string",
          "default": "Done",
          "description": "Name of the column that marks tasks as complete"
        },
        "chroma.export.defaultDateRangeMonths": {
          "type": "number",
          "default": 6,
          "minimum": 1,
          "maximum": 60,
          "description": "Default number of months for accomplishments export"
        },
        "chroma.export.includeDescriptions": {
          "type": "boolean",
          "default": true,
          "description": "Include task descriptions in accomplishments export"
        },
        "chroma.export.groupRecurringTasks": {
          "type": "boolean",
          "default": true,
          "description": "Group recurring tasks together in accomplishments export"
        },
        "chroma.database.path": {
          "type": "string",
          "default": ".chroma/chroma.db",
          "description": "Path to the SQLite database file. Supports three path styles: (1) Relative paths starting with '.' (e.g., '.chroma/chroma.db') for workspace-local storage; (2) Absolute paths (e.g., 'C:\\Users\\You\\shared.db' or '/home/you/shared.db') for explicit shared database location; (3) Simple paths without leading '.' (e.g., 'shared.db' or 'Documents/shared.db') which will use your home directory, allowing easy database sharing across workspaces without hardcoding usernames."
        },
        "chroma.nlh.linkPatterns": {
          "type": "object",
          "default": {},
          "description": "A list of regex to link patterns (e.g. Item: \"ABC-\\d+\"  Value: \"https://abc-project.atlassian.net/browse/$0\") that will be applied across all your notes. Turns matching text into links.",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "string"
              }
            ]
          }
        },
        "chroma.nlh.highlightNouns": {
          "type": "boolean",
          "default": true,
          "description": "Highlight nouns in the document"
        },
        "chroma.nlh.highlightVerbs": {
          "type": "boolean",
          "default": true,
          "description": "Highlight verbs in the document"
        },
        "chroma.nlh.highlightAdjectives": {
          "type": "boolean",
          "default": true,
          "description": "Highlight adjectives in the document"
        },
        "chroma.nlh.highlightAdverbs": {
          "type": "boolean",
          "default": true,
          "description": "Highlight adverbs in the document"
        },
        "chroma.nlh.highlightNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Highlight numbers in the document"
        },
        "chroma.notes.sortOrder": {
          "type": "string",
          "enum": [
            "lastModified",
            "alphabetical"
          ],
          "default": "lastModified",
          "description": "Sort order for notes in the Notes view. 'lastModified' shows most recently modified notes first, 'alphabetical' sorts by filename A-Z.",
          "enumDescriptions": [
            "Sort by last modified date (newest first)",
            "Sort alphabetically by filename (A-Z)"
          ]
        }
      }
    },
    "languages": [
      {
        "id": "notesnlh",
        "aliases": [
          "Notes NLH"
        ],
        "extensions": [
          ".notesnlh"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "notesnlh",
        "scopeName": "source.notesnlh",
        "path": "./syntaxes/notesnlh.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "chroma.cycleTaskForward",
        "title": "Task Complete (cycle)"
      },
      {
        "command": "chroma.cycleTaskBackward",
        "title": "Task Complete (cycle backward)"
      },
      {
        "command": "chroma.addCard",
        "title": "Add Card"
      },
      {
        "command": "chroma.editCard",
        "title": "Edit Card"
      },
      {
        "command": "chroma.moveCard",
        "title": "Move Card"
      },
      {
        "command": "chroma.editCardCompletedDate",
        "title": "Edit Completed Date"
      },
      {
        "command": "chroma.addBoard",
        "title": "Add Board"
      },
      {
        "command": "chroma.editBoard",
        "title": "Edit Board"
      },
      {
        "command": "chroma.deleteBoard",
        "title": "Delete Board"
      },
      {
        "command": "chroma.addColumn",
        "title": "Add Column"
      },
      {
        "command": "chroma.editColumn",
        "title": "Edit Column"
      },
      {
        "command": "chroma.deleteColumn",
        "title": "Delete Column"
      },
      {
        "command": "chroma.copyBoardId",
        "title": "Copy Board Id"
      },
      {
        "command": "chroma.deleteCard",
        "title": "Delete Card"
      },
      {
        "command": "chroma.convertCardToTask",
        "title": "Convert Card to Task"
      },
      {
        "command": "chroma.addTask",
        "title": "Add Task"
      },
      {
        "command": "chroma.editTask",
        "title": "Edit Task"
      },
      {
        "command": "chroma.convertTaskToCard",
        "title": "Convert to Card"
      },
      {
        "command": "chroma.completeTask",
        "title": "Complete Task"
      },
      {
        "command": "chroma.deleteTask",
        "title": "Delete Task"
      },
      {
        "command": "chroma.addTag",
        "title": "Add Tag"
      },
      {
        "command": "chroma.editTag",
        "title": "Edit Tag"
      },
      {
        "command": "chroma.deleteTag",
        "title": "Delete Tag"
      },
      {
        "command": "chroma.exportAccomplishments",
        "title": "Export Accomplishments"
      },
      {
        "command": "chroma.importData",
        "title": "Chroma: Import Data from JSON"
      },
      {
        "command": "chroma.exportData",
        "title": "Chroma: Export Data to JSON"
      },
      {
        "command": "chroma.search",
        "title": "Search"
      },
      {
        "command": "chroma.addNote",
        "title": "Add Note"
      },
      {
        "command": "chroma.editNote",
        "title": "Edit Note"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "chroma.addBoard",
          "when": "view == kanban",
          "group": "navigation"
        },
        {
          "command": "chroma.addTask",
          "when": "view == scheduledTasks",
          "group": "navigation"
        },
        {
          "command": "chroma.addTag",
          "when": "view == tags",
          "group": "navigation"
        },
        {
          "command": "chroma.addNote",
          "when": "view == notes",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "chroma.editBoard",
          "when": "view == kanban && viewItem == board",
          "group": "inline"
        },
        {
          "command": "chroma.deleteBoard",
          "when": "view == kanban && viewItem == board",
          "group": "inline"
        },
        {
          "command": "chroma.copyBoardId",
          "when": "view == kanban && viewItem == board",
          "group": "inline"
        },
        {
          "command": "chroma.addColumn",
          "when": "view == kanban && viewItem == board",
          "group": "inline"
        },
        {
          "command": "chroma.editColumn",
          "when": "view == kanban && viewItem == column",
          "group": "inline"
        },
        {
          "command": "chroma.deleteColumn",
          "when": "view == kanban && viewItem == column",
          "group": "inline"
        },
        {
          "command": "chroma.addCard",
          "when": "view == kanban && viewItem == column",
          "group": "inline"
        },
        {
          "command": "chroma.editCard",
          "when": "view == kanban && viewItem == card",
          "group": "inline"
        },
        {
          "command": "chroma.editCard",
          "when": "view == kanban && viewItem == completedCard",
          "group": "inline"
        },
        {
          "command": "chroma.deleteCard",
          "when": "view == kanban && viewItem == card",
          "group": "inline"
        },
        {
          "command": "chroma.deleteCard",
          "when": "view == kanban && viewItem == completedCard",
          "group": "inline"
        },
        {
          "command": "chroma.moveCard",
          "when": "view == kanban && viewItem == card",
          "group": "inline"
        },
        {
          "command": "chroma.moveCard",
          "when": "view == kanban && viewItem == completedCard",
          "group": "inline"
        },
        {
          "command": "chroma.editCardCompletedDate",
          "when": "view == kanban && viewItem == completedCard",
          "group": "inline"
        },
        {
          "command": "chroma.convertCardToTask",
          "when": "view == kanban && viewItem == card",
          "group": "inline"
        },
        {
          "command": "chroma.convertCardToTask",
          "when": "view == kanban && viewItem == completedCard",
          "group": "inline"
        },
        {
          "command": "chroma.editTask",
          "when": "view == scheduledTasks && viewItem == task",
          "group": "inline"
        },
        {
          "command": "chroma.convertTaskToCard",
          "when": "view == scheduledTasks && viewItem == task",
          "group": "inline"
        },
        {
          "command": "chroma.deleteTask",
          "when": "view == scheduledTasks && viewItem == task",
          "group": "inline"
        },
        {
          "command": "chroma.editTag",
          "when": "view == tags && viewItem == tag",
          "group": "inline"
        },
        {
          "command": "chroma.deleteTag",
          "when": "view == tags && viewItem == tag",
          "group": "inline"
        },
        {
          "command": "chroma.editNote",
          "when": "view == notes && viewItem == note",
          "group": "inline"
        }
      ]
    },
    "snippets": [
      {
        "language": "notesnlh",
        "path": "./snippets/newday.json"
      }
    ],
    "keybindings": [
      {
        "command": "chroma.cycleTaskForward",
        "key": "cmd+l",
        "when": "editorTextFocus && isMac"
      },
      {
        "command": "chroma.cycleTaskForward",
        "key": "ctrl+l",
        "when": "editorTextFocus && !isMac"
      },
      {
        "command": "chroma.cycleTaskBackward",
        "key": "cmd+shift+l",
        "when": "editorTextFocus && isMac"
      },
      {
        "command": "chroma.cycleTaskBackward",
        "key": "ctrl+shift+l",
        "when": "editorTextFocus && !isMac"
      },
      {
        "command": "chroma.search",
        "key": "ctrl+shift+f",
        "when": "!isMac"
      },
      {
        "command": "chroma.search",
        "key": "cmd+shift+f",
        "when": "isMac"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "entity_name_type",
        "superType": "type",
        "description": "Noun"
      },
      {
        "id": "entity_name_function",
        "superType": "function",
        "description": "Verb"
      },
      {
        "id": "entity_other_attribute_name",
        "superType": "string",
        "description": "Adjective"
      },
      {
        "id": "adverb_language",
        "superType": "variable",
        "description": "Adverb"
      },
      {
        "id": "value_type",
        "superType": "regexp",
        "description": "Value"
      }
    ]
  },
  "__metadata": {
    "id": "",
    "publisherDisplayName": "lilfetz22",
    "publisherId": ""
  },
  "dependencies": {
    "compromise": "^14.14.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^21.0.0",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.107.0",
    "@vscode/vsce": "^3.7.1",
    "chai": "^6.2.2",
    "esbuild": "^0.27.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "mocha": "^11.7.4",
    "semantic-release": "^25.0.2",
    "semantic-release-vsce": "^6.0.20",
    "sinon": "^21.0.1",
    "sql.js": "^1.13.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "glob": "^10.4.5",
    "inflight": "npm:@jsdevtools/inflight@^2.0.0"
  },
  "scripts": {
    "test": "jest",
    "compile": "tsc -p ./",
    "build": "npm run compile && node esbuild.js",
    "watch": "tsc -p ./ --watch",
    "vscode:prepublish": "npm run build",
    "package": "vsce package",
    "build-and-package": "npm run build && npm run package",
    "release": "semantic-release"
  }
}
